{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "components/*": ["src/components/*"],
      "errors": ["src/errors"],
      "helpers/*": ["src/helpers/*"],
      "routes": ["src/routes/index.ts"],
      "routes/*": ["src/routes/*"],
      "Router/*": ["src/Router/*"],
      "state/*": ["src/state/*"],
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
